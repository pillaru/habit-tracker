@model HabitTracker.Models.NewHabitDto;

<h2>Start a new habit</h2>

<form method="POST">

<div>
    <label asp-for="Title">Title</label>
    <input asp-for="Title" />
</div>

<div>
    <label asp-for="Description">Description (optional)</label>
    <textarea asp-for="Description" rows="3" cols="100"></textarea>
</div>

<div>
    <button type="submit">Submit</button>
</div>

</form>

