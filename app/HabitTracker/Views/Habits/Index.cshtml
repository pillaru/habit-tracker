@model IEnumerable<HabitTracker.Domain.Habit>

<a href="/habits/new" class="ui button">Start a new habit</a>

<div class="ui list">
    @if (Model.Count() == 0)
    {
        <p>No habits found.</p>
    }

    @foreach (var habit in Model)
    {
        <div class="item">
            <div class="content">
                <a asp-controller="Habits" asp-action="Details" asp-route-id="@habit.Id" class="header">@habit.Title</a>
                <div class="description">@habit.Description</div>
            </div>
        </div>
    }
</div>